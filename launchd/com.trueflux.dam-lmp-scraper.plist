<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.trueflux.dam-lmp-scraper</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>SCRAPER_PATH/scripts/run_dam_scraper.sh</string>
    </array>

    <!-- Run daily at 3:00 PM (DAM prices published ~1-2 PM Central) -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>15</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- Also run immediately when loaded -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Log output -->
    <key>StandardOutPath</key>
    <string>SCRAPER_PATH/logs/dam_stdout.log</string>
    <key>StandardErrorPath</key>
    <string>SCRAPER_PATH/logs/dam_stderr.log</string>

    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>SCRAPER_PATH</string>

    <!-- Environment variables (add your InfluxDB credentials here) -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>INFLUXDB_URL</key>
        <string>YOUR_INFLUXDB_URL</string>
        <key>INFLUXDB_TOKEN</key>
        <string>YOUR_INFLUXDB_TOKEN</string>
        <key>INFLUXDB_ORG</key>
        <string>YOUR_INFLUXDB_ORG</string>
        <key>INFLUXDB_BUCKET</key>
        <string>YOUR_INFLUXDB_BUCKET</string>
    </dict>
</dict>
</plist>
